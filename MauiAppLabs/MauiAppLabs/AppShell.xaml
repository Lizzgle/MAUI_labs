<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppLabs.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppLabs"
    xmlns:lab1="clr-namespace:MauiAppLabs.Calculator"
    xmlns:lab2="clr-namespace:MauiAppLabs.Sinus"
    xmlns:lab3="clr-namespace:MauiAppLabs.Tourism"
    xmlns:lab4="clr-namespace:MauiAppLabs.Converter">

    <FlyoutItem Title="Main">
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Calculator">
        <ShellContent
        Title="Calculator"
        ContentTemplate="{DataTemplate lab1:Calculator1}"
        Route="Calculator" />
    </FlyoutItem>

    <FlyoutItem Title="Process Bar">
        <ShellContent
        Title="Process Bar"
        ContentTemplate="{DataTemplate lab2:ProgressBar}"
        Route="Progress Bar" />
    </FlyoutItem>

    <FlyoutItem Title="Tourism">
        <ShellContent
        Title="Tourism"
        ContentTemplate="{DataTemplate lab3:TourismView}"
        Route="Tourism" />
    </FlyoutItem>
    
    <FlyoutItem Title="Converter">
        <ShellContent
        Title="Converter"
        ContentTemplate="{DataTemplate lab4:ConverterView}"
        Route="Converter" />
    </FlyoutItem>

</Shell>
