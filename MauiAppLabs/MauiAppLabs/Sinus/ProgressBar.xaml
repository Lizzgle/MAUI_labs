<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppLabs.Sinus.ProgressBar"
             Title="ProgressBar">

    <VerticalStackLayout>

        <Label
            x:Name="labelText"
            Text="Welcome to the second page of app"
            HorizontalOptions="Center"
        />
        
        

        <ProgressBar
            x:Name="progressBar"
            Margin="100"
        />

        <Label
            x:Name="labelProcent"
            HorizontalOptions="Center"
        />

        <HorizontalStackLayout>
            <Button
                FontSize="30"
                Margin="120"
                TextColor="Black"
                Text="Start"
                Clicked="OnStart"
                
            />

            <Button
                FontSize="30"
                Margin="120"
                TextColor="Black"
                Text="Cancel"
                Clicked="OnCancel"
            />

        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>